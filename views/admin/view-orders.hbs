<div class=" mt-5">
    <table id="orderTable" class="table table-striped table-bordered dt-responsive nowrap ms-auto " style="width: 80%;">
        <thead>
            <tr style="color: #fff;">

                <th>Customer</th>
                <th>Product</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Payment Method</th>
                {{!-- <th>Delivery Address</th> --}}
                <th>Status</th>
                <th>Date</th>
                <th>Cancel</th>

            </tr>
        </thead>

        <tbody>
            {{#each orders}}
            <tr>

                <td>{{this.userDetails.name}}</td>
                <td>{{this.productDetails.name}}</td>
                <td>{{this.products.quantity}}</td>
                <td>{{this.totalPrice}}</td>
                <td>{{this.paymentMethod}}</td>
                {{!-- <td></td> --}}
                {{#if products.placed}}
                <td><a href="/admin/changeStatus/{{this._id}}/{{this.productDetails._id}}/{{this.products.status}}"
                        class="btn btn-warning btn-sm">{{this.products.status}}</a></td>
                {{else if products.shipped}}
                <td><a href="/admin/changeStatus/{{this._id}}/{{this.productDetails._id}}/{{this.products.status}}"
                        class="btn btn-info btn-sm">{{this.products.status}}</a></td>
                {{else if products.cancelled}}
                <td><a href="" 
                class="btn btn-danger btn-sm">{{this.products.status}}</a></td>
                {{else}}
                <td><a href="/admin/changeStatus/{{this._id}}/{{this.productDetails._id}}/{{this.products.status}}"
                        class="btn btn-success btn-sm">{{this.products.status}}</a></td>
                {{/if}}
                <td>{{this.date}}</td>
                {{#if products.cancelled}}
                <td class="text-danger">Cancelled</td>
                {{else if products.delivered}}
                <td class="text-success">Delivered on {{products.deliveryDate}}</td>
                {{else}}
                <td><a href="/cancelOrder/{{this._id}}/{{this.products.item}}" class="btn btn-danger btn-sm">Cancel</a>
                </td>
                {{/if}}

            </tr>
            {{/each}}
        </tbody>

    </table>



    <script>
        $(document).ready(function () {


            $('#orderTable').wrap('<div id="hide" style="display:none"/>');

            $('#hide').css('display', 'block');
        });


        var table = $('#orderTable').DataTable();
    </script>
</div>


