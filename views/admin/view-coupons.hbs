
            
   <div class="container mt-5">
    <table id="couponTable" class="table table-striped table-bordered dt-responsive nowrap ms-auto mt-5" style="width: 80%;">
        <thead>
            <tr>
                {{!-- <th scope="col">Id</th> --}}
                <th scope="col">Name</th>
                <th scope="col">Coupon Code</th>
                <th scope="col">Discount</th>
                <th>Edit or Delete</th>
            </tr>
        </thead>
       
        <tbody>
            {{#each allCoupen}}
            <tr>
                {{!-- <th scope="row">{{inc @index}}</th> --}}
                {{!-- <td>{{this.couponId}}</td> --}}
                <td>{{this.name}} </td>
                <td>{{this.code}} </td>
                <td>{{this.discount}}</td>
                <td>                           
                    <a href="/admin/edit-coupon/{{this._id}}" class="btn btn-primary">Edit</a>
                    <a href="/admin/delete-coupon/{{this._id}}" class="btn btn-danger"
                    onclick="return confirm('Are you sure to Delete {{this.name}}?')">Delete</a>
                    </td>
            </tr>

                                        
            {{/each}}
        </tbody>

   </table>
   </div>


<script>
    $(document).ready(function () {


        $('#couponTable').wrap('<div id="hide" style="display:none"/>');

        $('#hide').css('display', 'block');
    });


    var table = $('#couponTable').DataTable();
</script>