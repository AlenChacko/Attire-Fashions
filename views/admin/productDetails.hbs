<section class="d-flex mt-5">
    <div class="container mt-3 d-flex">
        <table id="productsTable" class="table table-striped table-bordered dt-responsive nowrap ms-auto mt-auto"
    style="width: 80%;">

    <thead>

        <tr>
            
            <th>Name</th>
            <th>Category</th>
            <th>Description</th>
            <th>Price</th>
            <th>Image</th>
            <th>Edit or Delete</th>
        </tr>
    </thead>

    <tbody>
        {{#each products}}
        <tr>
           
            <td>{{this.name}}</td>
            <td>{{this.category}}</td>
            <td>{{this.description}}</td>
            <td>{{this.price}}</td>
            <td><img src="/product-images/{{this._id}}.jpg" style="width: 50px; height: 50px;"></td>
            <td><a class="btn btn-success btn-sm" href="/admin/editproduct/{{this._id}}">Edit</a>
                <a class="btn btn-danger btn-sm ms-2" href="/admin/deleteproduct/{{this._id}}" onclick="return confirm('Are you sure about deleting this item')">Delete</a>
            </td>
        </tr>
        {{/each}}
    </tbody>

</table>

    </div>
</section>