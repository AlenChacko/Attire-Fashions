            
   <div class="container mt-5">
    <table id="usersTable" class="table table-striped table-bordered dt-responsive nowrap ms-auto mt-5" style="width: 80%;">
        <thead>
            <tr>
                
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Status</th>
                
               
                
            </tr>
        </thead>
       
        <tbody>
          {{#each userdetails}}
            <tr>
                
                <td>{{this.name}}</td>
                <td>{{this.email}}</td>
                <td>{{this.phone}}</td>
                <td>
                    {{#if this.isBlock}}
                    <a href="/admin/unblock-user/{{this._id}}" class="btn btn-outline-danger"
                    onclick="return confirm('Are you sure to unblock {{this.name}}?')">Unblock</a>
                    {{else}}
                    <a href="/admin/block-user/{{this._id}}" class="btn btn-outline-success"
                    onclick="return confirm('Are you sure to block {{this.name}}?')">Block</a>
                    {{/if}}
                </td>
            </tr>
            {{/each}}
        </tbody>

   </table>
   </div>


<script>
    $(document).ready(function () {
    $('#usersTable').DataTable();
});
</script>