<section style="margin-left:500px" class="mt-5">
  <div class=" container row">
    <div class="ml-5 col-md-6">
      <h2 class="text-center mt-5">Add a new Category</h2>
      {{#if categoryErr}}
        <p class="text-danger">{{categoryErr}}</p>
        {{/if}}
      <form action="/admin/addcategory" method="post" class="text-danger" id="addCategory">
        

        <label class="text-dark" for="">Name</label>
        <input type="text" name="name" class="form-control bg-white mt-3" oninput="this.value= this.value.toLocaleUpperCase()" required><br>
       

        <button type="submit" class="btn btn-success mt-4 ml-auto">Submit</button>
       

      </form>
    </div>
  </div>
</section>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script type="text/javascript"
  src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.js"></script>
<script>
  $("#addCategory").validate();
</script>