

<section class="login py-3 bg-light">
    <div class="container">
        <div class="row g-0  ">
            <div class="col-lg-5">
                <img src="https://images.unsplash.com/photo-1509631179647-0177331693ae?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=388&q=80" class="img-fluid" alt="">
            </div>
            <div class="col-lg-7 text-center py-2 mt-5">
                {{!-- <h1 class="navbar-brand">Welcome Back</h1> --}}
                <a class="navbar-brand " style="font-size: 2rem;" href="">Attire <span>Fashions</span></a>
                <form action="/login" method="post" id="loginForm">
                    <div class="form-row py-3 pt-3">
                        <div class="offset-1 col-lg-10">
                            <input type="email" class="inp px-3" name="email" placeholder="Enter your email" required  value="alen@gmail.com">
                        </div>
                    </div>
                     <div class="form-row py-3 pt-3">
                        <div class="offset-1 col-lg-10">
                            <input type="password" class="inp px-3" name="password" placeholder="Enter your password" required value="123456">
                        </div>
                    </div>
                    {{#if loginErr}}
                    <p class="text-danger mt-2">{{loginErr}}</p>
                    {{/if}}
                    <div class="form-row py-3 pt-3">
                        <div class="offset-1 col-lg-10">
                            <button class="btn1" type="submit">Login</button>
                        </div>
                    </div>
                    <p>
                    <a href="" class="tag">forgot password?</a>
                </p>
                <p>
                    Don't have an account?
                </p>
                <p>
                     <a href="/signup" class="tag">Signup</a>
                </p>
            </div>
        </div>
    </div>
</section>

