<section class="mt-5">
    <div class="container ">
        <div class="main-body">
            <div class="row d-flex justify-content-center">
                <div class="col-lg-8">
                    <div class="card d-flex align-items-center">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <img src="/user-images/{{userInfo._id}}.jpg" alt=""
                                    class="rounded-circle p-1 bg-primary" width="150" height="150">
                                <div class="mt-3">
                                    <h2> {{userInfo.name}}</h2>
                                    <h4>Add Delivery Address</h4>
                                </div>
                            </div>
                            <hr class="my-4">
                            <div class="div justify-content-center d-flex mb-3 flex-column">
                                <button class="site-btn btn-light" style="border: none;" type="button"
                                    data-toggle="collapse" data-target="#collapseExample" aria-expanded="false"
                                    aria-controls="collapseExample">
                                    Add new address
                                </button>
                                <div class="collapse col-md-10 col-lg-12" id="collapseExample">
                                    <form action="/add-address" class="" id="address-form" method="post">
                                        <div class="row align-items-end">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="firstname">Full Name</label>
                                                    <input type="text" class="form-control" placeholder="" name="name"
                                                        minlength="4" required>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="lastname">Contact Number</label>
                                                    <input type="text" class="form-control inp" placeholder=""
                                                        name="phone" required>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row align-items-end">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="firstname">Email</label>
                                                    <input type="email" class="form-control" placeholder="" name="email"
                                                        minlength="4" required>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="lastname">Building Name</label>
                                                    <input type="text" class="form-control" placeholder=""
                                                        name="buildingName" required>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row align-items-end">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="firstname">City/Town</label>
                                                    <input type="text" class="form-control" placeholder="" name="city"
                                                        minlength="4" required>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="lastname">Pincode</label>
                                                    <input type="text" class="form-control inp" placeholder=""
                                                        name="pin" required>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row align-items-end">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="firstname">State</label>
                                                    <input type="text" class="form-control" placeholder="" name="state"
                                                        minlength="4" required>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="lastname">Country</label>
                                                    <input type="text" class="form-control" placeholder=""
                                                        name="country" required>
                                                </div>
                                            </div>
                                        </div>
                                        <button class="btn btn-success" type="submit">Submit</button>
                                    </form>
                                </div>
                            </div>
                            <div class="div ">
                                <!-- Button trigger modal -->
                                <button type="button" class="btn btn-success ml-5" data-toggle="modal"
                                    data-target="#exampleModalLong">
                                    View saved Addresses
                                </button>

                                <!-- Modal -->
                                <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog"
                                    aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header  d-flex justify-content-center flex-column ml-4">
                                                
                                                <h5 class="modal-title" id="exampleModalLongTitle mt-5 ml-5">Saved Delivery Addresses</h5>
                                                 {{#each userAddress.address}}
                                                <div class="ml-5">
                                                   
                                                    {{!-- {{#each userAddress.address}} --}}
                                                    <div class="card mb-3 mt-5 ml-5 align-self-center">
                                                        <div class="card-body">
                                                            <h5>{{this.name}},</h5>
                                                            <p>{{this.buildingName}},{{this.city}}, <br> {{this.pin}}, <br>
                                                                {{this.phone}},{{this.email}} <br> {{this.state}}, {{this.country}}</p>
                                                                <a href="/edit-address/{{this._id}}" class="btn btn-success btn-sm">Edit</a>
                                                                <a href="/delete-address/{{this.time}}" class="btn btn-danger btn-sm">Delete</a>
                                                        </div>
                                                    </div>
                                                    {{!-- {{/each}} --}}

                                                </div>
                                                {{/each}}

                                            </div>
                                            
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary"
                                                    data-dismiss="modal">Close</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                {{!-- <h4>Saved Delivery Addresses</h4>
                                {{#each userAddress.address}}
                                <div class="card mb-3">
                                    <div class="card-body">
                                        <h5>{{this.name}},</h5>
                                        <p>{{this.buildingName}},{{this.city}}, <br> {{this.pin}},{{this.state}}, <br>
                                            {{this.phone}}</p>
                                    </div>
                                </div>
                                {{/each}} --}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{!-- <div class="col-lg-8">

            </div>
        </div> --}}
    </div>
    </div>
</section>
