<section>
  <div class="container py-5">
    <div class="row text-center text-white mb-5">
      <div class="col-lg-7 mx-auto">
        <h1 class="display-4">Ordered Item</h1>
      </div>
    </div>
    <div class="row">

      <div class="col-lg-8 mx-auto">

        <!-- List group-->
        <ul class="list-group shadow">
          <!-- list group item-->
          <li class="list-group-item">
            <!-- Custom content-->


            <div class="media align-items-lg-center flex-column flex-lg-row p-3">
              <div class="media-body order-2 order-lg-1">
                <p class="text-muted"> Order ID : <span class="font-weight-bold text-dark">{{orders._id}}</span></p>
                <p class="text-muted"> Placed On : <span class="font-weight-bold text-dark">{{orders.date}}</span> </p>

                <h5 class="mt-0 font-weight-bold mb-2">{{orders.productDetails.name}}</h5>
                <p class="font-italic text-muted mb-0 small">{{orders.productDetails.description}}</p>
                <div class="d-flex align-items-center justify-content-between mt-1">
                  <h6 class="font-weight-bold my-2"> Price â‚¹ {{orders.productDetails.price}}</h6>
                </div>
                <div class="d-flex align-items-center justify-content-between mt-1">
                  <h6 class="font-weight-bold my-2">Quantity : {{orders.products.quantity}}</h6>
                </div>
                <div class="d-flex align-items-center justify-content-between mt-1">
                  {{#if orders.products.delivered}}
                  <p class="text-success">Item delivered on <br>{{orders.products.deliveryDate}}</p>
                  {{else if orders.products.cancelled}}
                  <p class="text-danger">Order cancelled</p>
                  {{else}}
                  <a href="/cancelOrder/{{orders._id}}/{{orders.productDetails._id}}" class="btn btn-danger">Cancel Order</a>
                  {{/if}}
                </div>
                <div class="d-flex align-items-center justify-content-between mt-1">
                  <h6 class="font-weight-bold my-2">Order Status : {{orders.products.status}}</h6>
                </div>



              </div><img src="/product-images/{{orders.productDetails._id}}.jpg" alt="Generic placeholder image"
                width="200" class="ml-lg-5 order-1 order-lg-2">
            </div>



            <!-- End -->
            {{!-- Place Progress Bar here --}}
          </li> <!-- End -->
          <!-- list group item-->
        </ul> <!-- End -->
      </div>

    </div>
  </div>
</section>



